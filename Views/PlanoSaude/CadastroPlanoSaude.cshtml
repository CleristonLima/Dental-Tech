@model PlanoSaudeModel

<h3>Cadastrar Plano de saude</h3>

<br />

<form asp-controller="PlanoSaude" asp-action="CadastroPlanoSaude" method="post">

    <input type="hidden" asp-for="IdPlan" />

    <div class="form-group">
        <label>Nome do Plano</label>
        <br />
        <input asp-for="NamePlan" type="text" class="form-control" required="required" />
        <span asp-validation-for="NamePlan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Operadora</label>
        <br />
        <input asp-for="Operator" type="text" class="form-control" required="required" />
        <span asp-validation-for="Operator" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Cobertura</label>
        <br />
        <input asp-for="Coverage" type="text" class="form-control" required="required" />
        <span asp-validation-for="Coverage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Telefone 1</label>
        <br />
        <input asp-for="Phone_number_1" type="text" class="form-control" required="required" />
        <span asp-validation-for="Phone_number_1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Telefone 2</label>
        <br />
        <input asp-for="Phone_number_2" type="text" class="form-control" />
        <span asp-validation-for="Phone_number_2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" required="required" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>