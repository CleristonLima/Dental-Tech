@model ContasPagarModel

<h3 class="titulo-cadastro">Cadastro de conta a pagar</h3>
<br />
<form asp-controller="Financeiro" asp-action="CadastroContas" method="post">
    <input type="hidden" asp-for="IdAccountPay" />

    <div class="form-group">
        <label>Descrição</label>
        <br />
        <input asp-for="DescAccountPay" type="text" class="form-control" required="required" />
        <span asp-validation-for="DescAccountPay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>R$ - Valor da conta</label>
        <br />
        <input asp-for="ValueAccountPay" type="text" class="form-control" required="required" />
        <span asp-validation-for="ValueAccountPay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Mês de referência</label>
        <select asp-for="Month" class="form-control" required="required">
            <option value="Janeiro">Janeiro</option>
            <option value="Fevereiro">Fevereiro</option>
            <option value="Marco">Marco</option>
            <option value="Abril">Abril</option>
            <option value="Maio">Maio</option>
            <option value="Junho">Junho</option>
            <option value="Julho">Julho</option>
            <option value="Agosto">Agosto</option>
            <option value="Setembro">Setembro</option>
            <option value="Outubro">Outubro</option>
            <option value="Novembro">Novembro</option>
            <option value="Dezembro">Dezembro</option>
        </select>
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Ano de referência</label>
        <br />
        <input asp-for="Year" type="text" class="form-control" required="required" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Data de vencimento</label>
        <br />
        <input asp-for="Expiration_Date" type="date" name="Expiration_Date" class="form-control date-field" required="required"
               min="@DateTime.MinValue.ToString("yyyy-MM-dd")"
               value="@Model.Expiration_Date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Expiration_Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Data de pagamento</label>
        <br />
        <input asp-for="Date_Payment" type="date" name="Date_Payment" class="form-control date-field"
               min="@DateTime.Now.ToString("yyyy-MM-dd")"
               value="@Model.Date_Payment?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Date_Payment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Status</label>
        <select asp-for="Status" class="form-control" required="required">
            <option value="Em aberto">Em aberto</option>
            <option value="Em atraso">Em Atraso</option>
            <option value="Pago em dia">Pago em dia</option>
            <option value="Pago em atraso">Pago em atraso</option>
            <option value="Cancelada">Cancelada</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>

<style>
    .titulo-cadastro {
        white-space: nowrap; /* Impede a quebra de linha */
        text-align: center; /* Centraliza o texto */
        margin-bottom: 20px; /* Adiciona um espaço abaixo do título */
    }

    .date-field {
        max-width: 200px; /* Defina a largura desejada */
        display: inline-block;
    }
</style>