@model ProdutoReceitaModel

<h2 class="titulo-cadastro">Cadastro de Remédios para receita</h2>

<form asp-controller="ProdutosEstoque" asp-action="CadastroRemedio" method="post">

    <input type="hidden" asp-for="IdProductRevenue" />

    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="NameProduct" type="text" class="form-control" required="required" />
        <span asp-validation-for="NameProduct" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <br />
        <label>Foto</label>
        <img src="@Model.LinkPhotoRevenue" width="150" height="150" />
        <br />
        <br />
        <input asp-for="LinkPhotoRevenue" type="text" placeholder="Link da foto" class="form-control" />
        <span asp-validation-for="LinkPhotoRevenue" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>
<br />
<button type="button" class="btn btn-block btn-primary" onclick="Voltar()">Listagem de remédios</button>

<script>
    function Voltar() {
        window.location.href = "../../ProdutosEstoque/ListaRemediosPacientes";
    }
</script>

<style>
    .titulo-cadastro {
        white-space: nowrap; /* Impede a quebra de linha */
        text-align: center; /* Centraliza o texto */
        margin-bottom: 20px; /* Adiciona um espaço abaixo do título */
    }
</style>