@model TipoConsultaModel

<h3>Cadastro de tipo de consultas</h3>

<br />

<form asp-controller="TipoConsulta" asp-action="CadastroTipoConsulta" method="post">
    <!-- Campo oculto para IdProfile -->
    <input type="hidden" asp-for="IdMedicalConsultation" />

    <div class="form-group">
        <label>Descrição da consulta</label>
        <br />
        <input asp-for="descMedicalConsultation" type="text" class="form-control" required="required" />
        <span asp-validation-for="descMedicalConsultation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>R$ - Valor da consulta</label>
        <br />
        <input asp-for="valueConsultation" type="text" class="form-control" required="required" />
        <span asp-validation-for="valueConsultation" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>