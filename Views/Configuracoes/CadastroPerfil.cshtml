@model PerfilModel


<h3 class="titulo-cadastro">Cadastro de perfil</h3>

<br />

<form asp-controller="Configuracoes" asp-action="CadastroPerfil" method="post">
    <!-- Campo oculto para IdProfile -->
    <input type="hidden" asp-for="IdProfile" />

    <div class="form-group">
        <label>Descrição do perfil</label>
        <br />
        <input asp-for="NameProfile" type="text" class="form-control" required="required"/>
        <span asp-validation-for="NameProfile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Sigla</label>
        <br />
        <input asp-for="CodeProfile" type="text" class="form-control" required="required" />
        <span asp-validation-for="CodeProfile" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>

<style>
    .titulo-cadastro {
        white-space: nowrap; /* Impede a quebra de linha */
        text-align: center; /* Centraliza o texto */
        margin-bottom: 20px; /* Adiciona um espaço abaixo do título */
    }
</style>