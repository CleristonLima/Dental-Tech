@model AcessoModel

<h3>Cadastro de Login</h3>

<br />

<form asp-controller="Configuracoes" asp-action="CadastroLogin" method="post">
    <!-- Campo oculto para IdProfile -->
    <input type="hidden" asp-for="IdLogin" />

    <div class="form-group">
        <label>Nome Completo</label>
        <br />
        <input asp-for="NamePeople" type="text" class="form-control" required="required" />
        <span asp-validation-for="NamePeople" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Login</label>
        <br />
        <input asp-for="LoginUser" type="text" class="form-control" required="required" />
        <span asp-validation-for="LoginUser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Senha</label>
        <br />
        <input asp-for="PassUser" type="text" class="form-control" required="required" />
        <span asp-validation-for="PassUser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Email</label>
        <br />
        <input asp-for="Email" type="text" class="form-control" required="required" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Usuario Bloqueado?</label>

        <select asp-for="BlockUser" class="form-control">
            <option value="true">Sim - True</option>
            <option value="false">Não - False</option>
        </select>

        <span asp-validation-for="BlockUser" class="text-danger"></span>

    </div>

    <div class="form-group">
        <br />
        <label>Perfil</label>
        <select asp-for="IdProfile" class="form-control" asp-items="ViewBag.ListaPerfis">
            <option value="">Selecione um perfil</option>
        </select>
        <span asp-validation-for="IdProfile" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>