@model MedicoModel

<h3>Cadastro de Medico</h3>

<br />

@if (ViewData.ModelState.ContainsKey("CRM_CRO") && ViewData.ModelState["CRM_CRO"].Errors.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState["CRM_CRO"].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-controller="Medico" asp-action="CadastroMedico" method="post">
    <!-- Campo oculto para IdProfile -->
    <input type="hidden" asp-for="IdDoctor" />

    <div class="form-group">
        <label>Nome Completo</label>
        <br />
        <input asp-for="NameDoctor" type="text" class="form-control" required="required" />
        <span asp-validation-for="NameDoctor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>CRM/CRO</label>
        <br />
        <input asp-for="CRM_CRO" type="text" class="form-control" required="required" />
        <span asp-validation-for="CRM_CRO" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Especialidade</label>
        <br />
        <input asp-for="Speciality" type="text" class="form-control" required="required" />
        <span asp-validation-for="Speciality" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Telefone 1</label>
        <br />
        <input asp-for="Phone_number_1" type="text" class="form-control" required="required" />
        <span asp-validation-for="Phone_number_1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Telefone 2</label>
        <br />
        <input asp-for="Phone_number_2" type="text" class="form-control" />
        <span asp-validation-for="Phone_number_2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" required="required" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>